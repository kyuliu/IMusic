<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/artist_item_sticky_view"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:background="@color/listBg"
        android:textColor="@color/aboutSign"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/artist_item_content"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_below="@id/artist_item_sticky_view"
        android:background="@drawable/list_item_selector"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/artist_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLength="22"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text_song_name_selector"
            android:textSize="@dimen/music_loating_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_item_album_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_singer_selector"
                android:textSize="@dimen/about_content" />

            <TextView
                android:id="@+id/artist_item_song_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:maxLength="18"
                android:maxLines="1"
                android:textColor="@color/text_singer_selector"
                android:textSize="@dimen/music_artist" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
